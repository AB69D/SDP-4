<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.foodorderanddeliveryappkotlin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.FoodOrderAndDeliveryAppKotlin" >
        <activity
            android:name="com.demo.foodorderanddeliveryappkotlin.SuccessOrderActivity"
            android:exported="true" />
        <activity
            android:name="com.demo.foodorderanddeliveryappkotlin.PlaceYourOrderActivity"
            android:exported="true" />
        <activity
            android:name="com.demo.foodorderanddeliveryappkotlin.RestaurantMenuActivity"
            android:exported="true" />
        <activity
            android:name="com.demo.foodorderanddeliveryappkotlin.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.demo.foodorderanddeliveryappkotlin.MainActivity"
            android:exported="true" />
    </application>

</manifest>